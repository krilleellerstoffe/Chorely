<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="30dp"
    tools:context=".activities.EditChoreActivity">

    <TextView
        android:id="@+id/activity_edit_textField_nameChore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nameChore"
        android:textColor="@color/btnColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/activity_edit_editText_nameChore"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintTop_toBottomOf="@+id/activity_edit_textField_nameChore" />

    <View
        android:id="@+id/edit_chore_divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background"
        app:layout_constraintBottom_toTopOf="@+id/activity_edit_textField_descriptionChore"
        app:layout_constraintTop_toBottomOf="@id/activity_edit_editText_nameChore" />

    <TextView
        android:id="@+id/activity_edit_textField_descriptionChore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/descriptionChore"
        android:textColor="@color/btnColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_chore_divider1" />

    <EditText
        android:id="@+id/activity_edit_editText_descriptionChore"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintTop_toBottomOf="@id/activity_edit_textField_descriptionChore" />

    <View
        android:id="@+id/edit_chore_divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background"
        app:layout_constraintBottom_toTopOf="@+id/activity_edit_textField_setPointsChore"
        app:layout_constraintTop_toBottomOf="@id/activity_edit_editText_descriptionChore" />

    <TextView
        android:id="@+id/activity_edit_textField_setPointsChore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/setPointsChore"
        android:textColor="@color/btnColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_chore_divider2" />

    <EditText
        android:id="@+id/activity_edit_editText_setPointsChore"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintTop_toBottomOf="@id/activity_edit_textField_setPointsChore" />

</androidx.constraintlayout.widget.ConstraintLayout>